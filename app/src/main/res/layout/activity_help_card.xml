<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_di"
    tools:context="com.tianjistar.help.activity.persion.HelpCardActivity">
    <include layout="@layout/top_bar_commom"
        android:id="@+id/in"></include>
    <ImageView
        android:id="@+id/iv_help"
        android:layout_marginBottom="@dimen/dimen_12_dp"
        android:layout_margin="@dimen/dimen_9_dp"
        android:layout_marginRight="@dimen/dimen_13_dp"
        android:layout_marginLeft="@dimen/dimen_13_dp"
        android:src="@drawable/ic_helpcard"
        android:layout_below="@+id/in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="65dp"
        android:layout_marginRight="@dimen/dimen_13_dp"
        android:layout_marginLeft="@dimen/dimen_13_dp"
        android:layout_below="@+id/iv_help"
        android:background="@drawable/helpcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_foot"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55_dp">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="价格： ¥999.00"
            android:textSize="15sp"
            android:textColor="@color/main_color"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/tv_buy"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/main_color"
            android:text="立即购买>"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2"/>
    </LinearLayout>

</RelativeLayout>
