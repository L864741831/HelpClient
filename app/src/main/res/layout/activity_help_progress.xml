<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_di"
    android:orientation="vertical"
    tools:context="com.tianjistar.help.activity.persion.HelpProgressActivity">
    <include layout="@layout/top_bar_commom"></include>
    <include layout="@layout/top_xian"></include>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_17_dp"
            android:layout_marginBottom="@dimen/dimen_17_dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_detail_no"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:text="救援单号：506546454"
                android:textColor="#232326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_detail_type"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:paddingTop="@dimen/dimen_12_dp"
                android:text="救援类型：506546454"
                android:textColor="#232326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_detail_time"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:paddingTop="@dimen/dimen_12_dp"
                android:text="呼救时间：506546454"
                android:textColor="#232326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right">
            <TextView
                android:layout_marginTop="@dimen/dimen_17_dp"
                android:textSize="13sp"
                android:id="@+id/tv_cancle"
                android:background="@drawable/feelin_bianji"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_13_dp"
                android:textColor="#232326"
                android:text="取消订单"
                android:layout_width="75dp"
                android:layout_height="28dp" />
        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_progress"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>
