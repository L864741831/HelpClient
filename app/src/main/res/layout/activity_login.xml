<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_color"
    tools:context="com.tianjistar.help.activity.login.LoginActivity">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_80_dp"
        android:src="@drawable/ic_logo"
        android:layout_width="@dimen/dimen_76_dp"
        android:layout_height="@dimen/dimen_76_dp" />
    <com.tianjistar.help.widget.ClearEditText
        android:inputType="text"
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:hint="请输入手机号/天机卡号"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:textColor="@color/login_see"
        android:textColorHint="@color/login_hint"
        android:background="@null"
        android:textSize="16sp"
        android:layout_marginTop="85dp"
        />
    <View
        android:layout_marginRight="@dimen/dimen_21_dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_21_dp"
        android:background="@color/login_xian"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tianjistar.help.widget.ClearEditText
            android:id="@+id/et_pwd"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingLeft="21dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/login_see"
            android:textColorHint="@color/login_hint"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_marginRight="@dimen/dimen_21_dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_hint"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
   
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_21_dp"
        android:layout_marginRight="@dimen/dimen_21_dp"
        android:background="@color/login_xian"/>
    <LinearLayout
        android:layout_marginRight="@dimen/dimen_21_dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_regest"
        android:paddingRight="@dimen/dimen_21_dp"
        android:paddingLeft="@dimen/dimen_21_dp"
        android:paddingBottom="@dimen/dimen_28_dp"
        android:paddingTop="@dimen/dimen_28_dp"
        android:textColor="#7a5d5d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"/>
        <TextView
            android:id="@+id/tv_foget"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingBottom="@dimen/dimen_28_dp"
            android:paddingTop="@dimen/dimen_28_dp"
            android:textColor="#7a5d5d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="忘记密码？"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="登录"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/add_card_next"/>
</LinearLayout>
