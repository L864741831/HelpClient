<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:clipChildren="false"
    tools:context="com.tianjistar.help.activity.MainActivity">
    <FrameLayout

        android:orientation="vertical"
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>
<ImageView
    android:id="@+id/iv_main"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_bg"/>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="@dimen/dimen_30_dp"
        android:layout_marginLeft="@dimen/dimen_30_dp"
        android:clipChildren="false"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <LinearLayout
            android:id="@+id/menu01"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/menu_icon01"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_first">
            </ImageView>
            <TextView
                android:id="@+id/menu_name01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="首页"
                android:textColor="#f02b2b"
                android:textSize="10sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:clipChildren="false"
            android:layout_marginTop="-30dp"
            android:id="@+id/menu02"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/menu_icon02"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_phone">
            </ImageView>
            <TextView
                android:id="@+id/menu_name02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="一键救援"
                android:textColor="#f02b2b"
                android:textSize="10sp">

            </TextView>
        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="@dimen/dimen_3_dp"
            android:id="@+id/menu03"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/menu_icon03"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_unpersion">
            </ImageView>
            <TextView
                android:id="@+id/menu_name03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="个人"
                android:textColor="#808080"
                android:textSize="10sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
