<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    tools:context="com.tianjistar.help.activity.persion.MineAboutActivity">
    <include layout="@layout/top_bar_commom"></include>
    <include layout="@layout/top_xian"></include>
    <ImageView
        android:id="@+id/iv_about_icon"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_noname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tv_about_version"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="#25191a"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/iv_about_icon"
        android:text="天佑 1.0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_jieshao"
        android:orientation="horizontal"
        android:layout_marginTop="42dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/tv_about_version"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:text="去评分"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_persion_next"
            android:layout_width="52dp"
            android:layout_height="52dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_1"
        android:layout_below="@+id/rl_jieshao"
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/rl_http"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/iv_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:text="服务协议"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_persion_next"
            android:layout_width="52dp"
            android:layout_height="52dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_2"
        android:layout_below="@+id/rl_version"
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/rl_version"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/iv_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:text="版本更新"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_set_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:text="有新版本"
            android:textColor="@color/main_color"
            android:textSize="13sp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_persion_next"
            android:layout_width="52dp"
            android:layout_height="52dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_3"
        android:layout_below="@+id/rl_http"
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_12_dp"
        android:layout_gravity="bottom"
        android:text="天机集团 版权所有"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#828282"/>
</LinearLayout>
