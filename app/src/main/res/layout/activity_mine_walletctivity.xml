<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tianjistar.help.activity.persion.MineWalletctivity">

    <include layout="@layout/top_bar_commom_text"/>

    <TextView
        android:layout_width="@dimen/dimen_30_dp"
        android:layout_height="@dimen/dimen_2_dp"
        android:layout_marginTop="43dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/xian_edit"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="您的天机卡余额（元）"
        android:textSize="16dp"
        android:textColor="@color/main_color"
        />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="00.00"
        android:textSize="50dp"
        android:textColor="@color/main_color"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="元"
        android:textSize="18dp"
        android:textColor="@color/main_color"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg_money"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="151dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="您有一笔500元的交易已转入"
                android:textSize="16dp"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="余额"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/tv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="  去查看>"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/pay_money"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="充值"
            android:textColor="@color/main_color"
            android:textSize="17dp"
            />

    </RelativeLayout>

</LinearLayout>
