<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_di"
    android:orientation="vertical"
    >
    <include layout="@layout/top_bar_commom"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="#e1e1e1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请按照提示操作"/>
    <ImageView
        android:layout_marginTop="@dimen/dimen_9_dp"
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:text="姓 名"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/et_realname"
            android:textCursorDrawable="@drawable/add_card_cursor"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColorHint="#404040"
            android:hint="输入姓名"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50.5dp"/>
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:text="身份证号"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="text"
            android:singleLine="true"
            android:id="@+id/et_realname_num"
            android:textCursorDrawable="@drawable/add_card_cursor"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColorHint="#404040"
            android:hint="输入身份证号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.5dp"/>
    </LinearLayout>
    <ImageView
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <Button
        android:id="@+id/btn_addcard_phone_next"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="确定认证"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33.5dp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/add_card_next"/>
</LinearLayout>
