<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_di"
    android:orientation="vertical"
    tools:context="com.tianjistar.help.activity.persion.UpdataPwdActivity">

    <include layout="@layout/top_bar_commom"/>

    <include layout="@layout/top_xian"/>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/rl_tel_num"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >

        <EditText
            android:id="@+id/et_tel_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_13_dp"
            android:paddingRight="5dp"
            android:password="true"
            android:singleLine="true"
            android:hint="原密码"
            android:textColor="#181818"
            android:textSize="15dp"
            android:textColorHint="#d2d2d2" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"
        />

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >

        <EditText
            android:layout_centerVertical="true"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="新密码"
            android:paddingLeft="@dimen/dimen_13_dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#181818"
            android:textSize="15dp"
            android:textColorHint="#d2d2d2" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/rl_Newpassword2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >

        <EditText
            android:textColor="#181818"
            android:textSize="15sp"
            android:textColorHint="#d2d2d2"
            android:id="@+id/et_newpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="确认新密码"
            android:paddingLeft="@dimen/dimen_13_dp"
            android:password="true"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />

    <Button
        android:id="@+id/bt_update_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/add_card_next"
        android:layout_marginRight="@dimen/dimen_13_dp"
        android:layout_marginLeft="@dimen/dimen_13_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:alpha="0.5"
        android:text="完成"
        android:textSize="20dp"
        android:textColor="#ffffff"
       />

</LinearLayout>
