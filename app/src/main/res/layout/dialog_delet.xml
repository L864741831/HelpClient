<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="327dp"
    android:background="@drawable/dialog_shape"
    android:layout_height="177dp">
    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center"
        android:text="是否要取消任务？"
        android:textColor="#06090b"
        android:textSize="17sp"/>
    <TextView
        android:layout_marginRight="@dimen/dimen_4_dp"
        android:layout_marginLeft="@dimen/dimen_4_dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_cancel"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_color"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_4_dp"
            android:background="#cccccc" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/ok"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_color"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>