<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_insurance_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="车辆意外保险"
                android:textSize="16dp"
                android:textColor="#2a2a2d"
                />

            <TextView
                android:id="@+id/tv_insurance_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insurance_type"
                android:layout_marginTop="15dp"
                android:paddingRight="35dp"
                android:text="保险单号"
                android:textSize="13dp"
                android:textColor="#2a2a2d"
                />

            <LinearLayout
                android:id="@+id/ll_insurance_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insurance_no"
                android:layout_marginTop="15dp"
                android:paddingRight="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险范围："
                    android:textSize="13dp"
                    android:textColor="#2a2a2d"
                    />

                <TextView
                    android:id="@+id/tv_insurance_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大法师法师法范德萨发顺丰的发生大法师法师法"
                    android:textSize="13dp"
                    android:textColor="#2a2a2d"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_insurance_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_insurance_range"
                android:layout_marginTop="10dp"
                android:text="保期：2018/4/5-2019/4/3"
                android:textSize="13dp"
                android:textColor="#2a2a2d"
                />

            <TextView
                android:id="@+id/tv_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insurance_time"
                android:layout_marginTop="15dp"
                android:text="理赔记录："
                android:textSize="13dp"
                android:textColor="#2a2a2d"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_first"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_record"
                >
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <View
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_layout"
            android:background="#e0e0e0"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我知道了"
                android:textSize="15dp"
                android:textColor="#f02b2b"
                />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>