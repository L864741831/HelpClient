<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_di"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.CoordinatorLayout
            android:visibility="visible"
            android:id="@+id/coo_frist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appl"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                >
                <RelativeLayout
                    android:id="@+id/rl_frist"
                    app:layout_scrollFlags="scroll"
                    android:layout_width="match_parent"
                    android:layout_height="520.5dp"
                    >
                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/bmapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:background="@drawable/bg_search"
                            android:layout_marginRight="100dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginBottom="9dp"
                            >
                            <com.tianjistar.help.widget.ClearEditText
                                android:id="@+id/et_search"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="16px"
                                android:drawableLeft="@drawable/icon_search"
                                android:drawablePadding="8dp"
                                android:imeOptions="actionSearch"
                                android:maxLength="11"
                                android:hint="搜索救援或地点"
                                android:paddingLeft="8dp"
                                android:paddingRight="15dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textColor="@color/text_black"
                                android:textColorHint="#f5f5f5"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:background="@null"
                                android:layout_centerInParent="true"
                                />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_frist_position"
                            android:textSize="17sp"
                            android:layout_centerVertical="true"
                            android:drawablePadding="6dp"
                            android:layout_marginRight="@dimen/dimen_14_dp"
                            android:drawableRight="@drawable/ic_foot"
                            android:textColor="#dddddd"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/iv_1"
                        android:layout_marginTop="210dp"
                        android:src="@drawable/ic_first_bg"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="156dp" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_frist_xian"
                        android:layout_marginTop="288dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/frist_xian"
                        android:layout_width="36dp"
                        android:layout_height="4dp" />
                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_1"
                        android:layout_marginRight="@dimen/dimen_16_dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="300dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_frist_helpcard"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_frist"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="@dimen/dimen_0_dp"
                            android:layout_height="@dimen/dimen_50_dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_frist_help"
                                android:layout_width="25.5dp"
                                android:layout_height="18dp" />
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dimen_10_dp"
                                android:textColor="#5e8aa6"
                                android:textSize="15.5sp"
                                android:text="救援卡"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_frist_insurance"
                            android:layout_marginLeft="@dimen/dimen_16_dp"
                            android:background="@drawable/btn_frist1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="@dimen/dimen_0_dp"
                            android:layout_height="@dimen/dimen_50_dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_frist_insurance"
                                android:layout_width="21dp"
                                android:layout_height="22.5dp"  />
                            <TextView
                                android:paddingLeft="@dimen/dimen_10_dp"
                                android:textColor="#967363"
                                android:textSize="15.5sp"
                                android:text="保险理财"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_xin"
                        android:layout_below="@+id/iv_1"
                        android:background="#e5e5e5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_10_dp" />
                    <ImageView
                        android:background="#ffffff"
                        android:visibility="visible"
                        android:id="@+id/iv"
                        android:layout_below="@+id/tv_xin"
                        android:src="@drawable/ic_first_card"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="134.5dp" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_xin1"
                    android:layout_below="@+id/iv"
                    android:background="#e5e5e5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10_dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    app:stl_indicatorAlwaysInCenter="false"
                    app:stl_indicatorWithoutPadding="false"
                    app:stl_indicatorInFront="true"
                    app:stl_indicatorInterpolation="smart"
                    app:stl_indicatorGravity="bottom"
                    app:stl_indicatorColor="@color/main_color"
                    app:stl_indicatorThickness="3dp"
                    app:stl_indicatorWidth="30sp"
                    app:stl_overlineColor="#00000000"
                    app:stl_overlineThickness="0dp"
                    app:stl_underlineColor="#00000000"
                    app:stl_underlineThickness="0dp"
                    app:stl_dividerColor="#00000000"
                    app:stl_dividerThickness="0dp"
                    app:stl_defaultTabTextAllCaps="true"
                    app:stl_defaultTabTextColor="#666666"
                    app:stl_defaultTabTextSize="14sp"
                    app:stl_defaultTabTextHorizontalPadding="0dp"
                    app:stl_defaultTabTextMinWidth="0dp"
                    app:stl_distributeEvenly="true"
                    app:stl_clickable="true"
                    app:stl_titleOffset="10dp"
                    app:stl_drawDecorationAfterTab="false"
                    app:stl_customTabTextLayoutId="@layout/view_resource_text"

                    />
                <!--<android.support.design.widget.TabLayout-->
                    <!--android:visibility="visible"-->
                    <!--android:background="#ffffff"-->
                    <!--android:id="@+id/sliding_tabs"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="44dp"-->
                    <!--&gt;-->
                <!--</android.support.design.widget.TabLayout>-->
            </RelativeLayout>
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_vp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.tianjistar.help.view.DisallowParentTouchViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.tianjistar.help.view.DisallowParentTouchViewPager>
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/in_frist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_frist_hele_phone"
           ></include>
    </LinearLayout>

</RelativeLayout>