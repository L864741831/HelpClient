<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="60dp"

   >
    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginRight="@dimen/dimen_18_dp"
        android:layout_marginLeft="@dimen/dimen_18_dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_no"
                android:textColor="#2a2a2d"
                android:textSize="14sp"
                android:text="订单：  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_money"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:text="-423"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_day"
                android:textColor="#848689"
                android:textSize="12sp"
                android:text="2018-03-05  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_type"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="#848689"
                android:textSize="12sp"
                android:text="道路救援"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginRight="@dimen/dimen_18_dp"
        android:layout_marginLeft="@dimen/dimen_18_dp"
        android:layout_alignParentBottom="true"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp" />
</RelativeLayout>