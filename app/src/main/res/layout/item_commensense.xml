<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_whole_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_first_aid_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/dimen_28_dp"
        android:layout_marginRight="@dimen/dimen_17_dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_frist_tab"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        >

        <TextView
            android:id="@+id/tv_fristitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="109dp"
            android:textSize="16dp"
            android:maxLines="2"
            android:text="123456"
            android:paddingTop="@dimen/dimen_25_dp"
            android:textColor="#383838"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fristitem_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_15_dp"
                android:paddingBottom="@dimen/dimen_25_dp"
                android:text="123456"
                android:textSize="13dp"
                android:textColor="#929292"/>

            <TextView
                android:id="@+id/tv_fristitem_look"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:paddingTop="@dimen/dimen_15_dp"
                android:paddingRight="109dp"
                android:paddingBottom="@dimen/dimen_25_dp"
                android:textSize="13dp"
                android:text="123456"
                android:textColor="#929292"/>

        </LinearLayout>

        <View
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dp" />

    </LinearLayout>

</RelativeLayout>