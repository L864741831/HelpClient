<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        >

        <ImageView
            android:id="@+id/iv_product_pic"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/insurance_pic"
            />

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_red_bg"
            android:layout_toRightOf="@+id/iv_product_pic"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="推荐"
            android:textSize="13dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_insurance_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_recommend"
            android:layout_alignBaseline="@+id/tv_recommend"
            android:layout_marginLeft="10dp"
            android:text="天佑车辆意外险"
            android:textSize="16dp"
            android:textColor="#3d4245"
            />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_product_pic"
            android:layout_below="@+id/tv_insurance_type"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:text="保全中国地区 | 交通 | 自驾 | 不限次数"
            android:textSize="11dp"
            android:textColor="#acacac"
            />

        <TextView
            android:id="@+id/tv_insurance_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_product_pic"
            android:layout_alignBottom="@+id/iv_product_pic"
            android:layout_marginLeft="10dp"
            android:text="219.00"
            android:textSize="16dp"
            android:textColor="#f96268"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_insurance_price"
            android:layout_alignBottom="@+id/iv_product_pic"
            android:text="元 起"
            android:textSize="12dp"
            android:textColor="#f96268"
            />

    </RelativeLayout>

</LinearLayout>