<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="2018年03月09日 上午 09:21"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_15_dp"
        android:background="@drawable/item_mywallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingTop="@dimen/dimen_17_dp"
            android:textColor="#383838"
            android:textSize="@dimen/dimen_18_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="救援卡购买通知"/>

        <TextView
            android:id="@+id/tv_day"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingTop="@dimen/dimen_11_dp"
            android:text="03月09日"
            android:textSize="15.5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#929292"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_35_dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingTop="@dimen/dimen_11_dp"
            android:text="消费金额"
            android:textSize="15.5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#929292"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_20_dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingTop="@dimen/dimen_11_dp"
            android:text="¥ 4500.00"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#383838"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_25_dp"
            android:id="@+id/dotted_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/xuxian"
            android:layerType="software"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#929292"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间："/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:textColor="#383838"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03月09日"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#929292"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易类型："/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:textColor="#383838"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03月09日"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_18_dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#929292"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易账户："/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:textColor="#383838"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03月09日"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_42_dp"
            android:layout_marginTop="@dimen/dimen_18_dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#929292"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额："/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:textColor="#383838"
                android:textSize="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03月09日"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>