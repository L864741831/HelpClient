<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_xian1"
                android:layout_marginLeft="@dimen/dimen_18_dp"
                android:background="#e3e5e9"
                android:layout_width="1dp"
                android:layout_height="25dp" />
            <ImageView
                android:id="@+id/iv_item_dian"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_xiaodian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_xian2"
                android:layout_marginLeft="@dimen/dimen_18_dp"
                android:background="#e3e5e9"
                android:layout_width="1dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_13_dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_now"
                android:textColor="#232326"
                android:textSize="14sp"
                android:text="【天有救援机构】救援人员已经出发镜救援已经出发救援人员银镜救援人员已经出发救援人员银镜"
                android:paddingRight="@dimen/dimen_17_dp"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dimen_14_dp"
                android:id="@+id/tv_time"
                android:textColor="#898989"
                android:textSize="13sp"
                android:text="2018-06-08"
                android:paddingRight="@dimen/dimen_17_dp"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:layout_marginLeft="@dimen/dimen_22_dp"
                android:background="#e3e5e9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5_dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>