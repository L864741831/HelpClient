<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_item_salf_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_salf_head"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12_dp"
            android:layout_toRightOf="@+id/iv_item_salf_head"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_salf_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆意外险"
                android:textColor="#252525"
                android:textSize="14dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_17_dp"
                    android:text="保障时间: "
                    android:textColor="#252525"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/tv_item_salf_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_17_dp"
                    android:text="2018/6/5-2019/6/4"
                    android:textColor="#838282"
                    android:textSize="13dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="17dp"
            android:layout_marginTop="@dimen/dimen_20_dp"
            android:layout_marginRight="@dimen/dimen_21_dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_salf_detail"
             />

        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/dimen_45_dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_salf_protcte"
            />

    </RelativeLayout>

</LinearLayout>