<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="89.5dp">
    <ImageView
        android:id="@+id/iv_item_salf_head"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_salf_head"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_12_dp"
        android:layout_toRightOf="@+id/iv_item_salf_head"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_salf_title"
            android:textColor="#252525"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆意外险"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="@dimen/dimen_17_dp"
                android:textColor="#252525"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保障时间: "/>
            <TextView
                android:layout_marginTop="@dimen/dimen_17_dp"
                android:id="@+id/tv_item_salf_time"
                android:textColor="#838282"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保障时间"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:layout_marginRight="@dimen/dimen_21_dp"
        android:src="@drawable/ic_salf_detail"
        android:layout_alignParentRight="true"
        android:layout_width="14dp"
        android:layout_height="17dp" />
    <ImageView
        android:layout_marginRight="@dimen/dimen_45_dp"
        android:src="@drawable/ic_salf_protcte"
        android:layout_alignParentRight="true"
        android:layout_width="79.5dp"
        android:layout_height="60dp" />
</RelativeLayout>
</LinearLayout>