<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="139dp">

    <ImageView
        android:id="@+id/iv_xian1"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:src="@drawable/ic_first_bg"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/ll_up_layout"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        >

        <TextView
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/frist_xian"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_feist_on_help"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7.5dp"
        android:background="@drawable/add_card_next"
        android:layout_marginRight="7.5dp"
        android:layout_marginLeft="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="49dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_frist_one_help"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:text="一键呼救"
            android:textSize="17dp"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

</RelativeLayout>